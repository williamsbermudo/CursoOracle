--LECCIÓN 3
-------------
--LISTAR TODAS LAS BASES DE DATOS DEL SERVIDOR
SELECT * FROM V$DATABASE

--LISTAR TODOS LOS USUARIOS/ESQUEMAS  DENTRO DE LA BASE DE DATOS EN LA CUAL ESTOY CONECTADO
SELECT * FROM DBA_USERS

--CAMBIAR LA FECHA DE EXPIRACIÓN DE LA CONTRASEÑA
ALTER PROFILE DEFAULT LIMIT PASSWORD_LIFE_TIME 90 --CONTRASEÑA CADUCA 
ALTER PROFILE DEFAULT LIMIT PASSWORD_LIFE_TIME UNLIMITED
ALTER PROFILE DEFAULT LIMIT PASSWORD_REUSE_TIME 90 PASSWORD_REUSE_MAX UNLIMITED; --EL USUARIO NO PUEDE REUTILIZAR SU CLAVE POR 90 DÍAS

--CAMBIAR LA CONTRASEÑA DE UN USUARIO/ESQUEMA
ALTER USER SYSTEM IDENTIFIED BY 1234

--DESBLOQUEAR AL USUARIO
ALTER USER SYSTEM ACCOUNT UNLOCK

--CREAR UN USUARIO/ESQUEMA
CREATE USER USER_ORA IDENTIFIED BY 1234
default tablespace USERS
temporary tablespace TEMP
quota unlimited on USERS

--HABILITAR LOS PRIVILEGISO AL USUARIO
grant create session to USER_ORA;
grant create table to USER_ORA;
grant create view to USER_ORA;
grant create procedure to USER_ORA;
grant create trigger to USER_ORA;
grant create sequence to USER_ORA;
grant create job to USER_ORA;

--PERMISOS PARA PODER CREAR USUARIOS/ESQUEMAS
alter session set "_ORACLE_SCRIPT"=true;
